<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingLeft="@dimen/cbs_spacing" android:paddingTop="@dimen/cbs_spacing" android:paddingRight="@dimen/cbs_spacing" android:paddingBottom="@dimen/cbs_spacing" android:layout_width="fill_parent" android:layout_height="wrap_content"
