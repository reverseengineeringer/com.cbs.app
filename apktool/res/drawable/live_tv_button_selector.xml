<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_mediumAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/live_tv_blue_button_highlight" />
            <corners android:radius="@dimen/live_tv_button_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/live_tv_blue" />
            <corners android:radius="@dimen/live_tv_button_radius" />
        </shape>
    </item>
</selector>